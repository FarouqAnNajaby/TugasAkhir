<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.main.home.hasil.HasilActvity">

    <ImageView
        android:id="@+id/myimage"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/womanwithbaby"
        android:layout_height="200dp"/>

    <!--TextView used for showing questions on screen-->
    <TextView
        android:id="@+id/answer_text_view"
        android:text="Balita atas nama Sobri mengalami penyaki jenis demam yaiu "
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_penyakit"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:background="@color/gray_btn_bg_color"
        android:text="Demam Berdarah"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_solus"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="Kami menyarankan anda untuk melakukan rujuk segera"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>